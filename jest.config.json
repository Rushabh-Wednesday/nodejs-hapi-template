{
    "setupFilesAfterEnv": ["./jest.setup.js"],
    "clearMocks": true,
    "restoreMocks": true,
    "resetMocks": true,
    "globals": {
        "server": null
    },
    "coverageReporters": ["json-summary", "text", "lcov"],
    "coverageThreshold": {
        "global": {
            "statements": 88,
            "branches": 88,
            "functions": 88,
            "lines": 88
        }
    },
    "coveragePathIgnorePatterns": [
        "<rootDir>/node_modules/",
        "<rootDir>/utils/testUtils.js",
        "<rootDir>/utils/mockData.js",
        "<rootDir>/lib/testServer.js"
    ]
}
